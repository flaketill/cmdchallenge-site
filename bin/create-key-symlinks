#!/bin/bash
set -e
dir=$(dirname $0)
private_dir="${dir}/../private"
lambda_key_dir="${dir}/../lambda_src/runcmd/keys"

if [[ ! -d "$private_dir" ]]; then
    echo "$private_dir doesn't exists, not doing anything"
    exit 0
fi

ln -fs "../../../private/ca/ca.pem" "$lambda_key_dir/ca.pem"
ln -fs "../../../private/client/cert.pem" "$lambda_key_dir/cert.pem"
ln -fs "../../../private/client/key.pem" "$lambda_key_dir/key.pem"
